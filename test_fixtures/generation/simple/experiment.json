{
  "dataset_reader": {
    "type": "seq2seq",
    "source_tokenizer": {
      "type": "spacy",
      "pos_tags": true,
      "parse": true,
      "ner": true
    },
    "target_tokenizer": {
      "type": "spacy"
    },
    "source_token_indexers": {
      "tokens": {
        "type": "single_id",
        "namespace": "source_tokens"
      },
      "pos_tags": {
        "type": "single_id",
        "feature_name": "pos_",
        "default_value": "NONE",
        "namespace": "pos"
      },
      "dependency_label": {
        "type": "single_id",
        "feature_name": "dep_",
        "default_value": "NONE",
        "namespace": "dependencies"
      },
      "ner_tags": {
        "type": "single_id",
        "feature_name": "ent_type_",
        "default_value": "NONE",
        "namespace": "ner"
      }
    },
    "target_token_indexers": {
      "tokens": {
        "namespace": "target_tokens"
      }
    }
  },
  "train_data_path": "test_fixtures/generation/seq2seq_copy.tsv",
  "validation_data_path": "test_fixtures/generation/seq2seq_copy.tsv",
  "model": {
    "type": "simple_seq2seq",
    "source_embedder": {
      "token_embedders": {
        "tokens": {
          "type": "embedding",
          "vocab_namespace": "source_tokens",
          "embedding_dim": 25,
          "trainable": true
        },
        "pos_tags": {
          "type": "embedding",
          "vocab_namespace": "pos",
          "embedding_dim": 5
        },
        "ner_tags": {
          "type": "embedding",
          "vocab_namespace": "ner",
          "embedding_dim": 7
        },
        "dependency_label": {
          "type": "embedding",
          "vocab_namespace": "dependencies",
          "embedding_dim": 10
        }
      }
    },
    "encoder": {
      "type": "lstm",
      "input_size": 47,
      "hidden_size": 10,
      "num_layers": 1
    },
    "beam_search": {
      "max_steps": 20,
      "beam_size": 5
    },
    "target_embedding_dim": 30,
    "target_namespace": "target_tokens",
    "attention": {
      "type": "dot_product"
    }
  },
  "data_loader": {
    "batch_sampler": {
        "type": "bucket",
        "batch_size": 80,
        "padding_noise": 0.0
    }
},
  "trainer": {
    "num_epochs": 2,
    "patience": 10,
    "cuda_device": -1,
    "optimizer": {
      "type": "adam",
      "lr": 0.01
    }
  }
}
